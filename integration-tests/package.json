{
  "name": "@midnight/ledger-api-tests",
  "version": "0.0.1",
  "description": "Integration tests for Ledger API",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "IOHK",
  "license": "Apache-2.0",
  "devEngines": {
    "packageManager": {
      "name": "yarn",
      "onFail": "error"
    }
  },
  "scripts": {
    "clean": "rm -rf dist node_modules reports lib-sources coverage logs",
    "build": "tsc",
    "local-prepare": "sudo rm -rf lib-sources && mkdir -p lib-sources && cp -r -L ../result/lib/node_modules/@midnight-ntwrk lib-sources",
    "test:coverage:prepare": "mkdir -p lib-sources && cp -r -L ../result/lib/node_modules/@midnight-ntwrk lib-sources",
    "test:coverage": "MN_AXIOS=true vitest run --config=vitest.config.coverage.ts",
    "test": "MN_AXIOS=true DEBUG='testcontainers:containers' vitest run",
    "test:wasm": "MN_WASM_PROVING=true MN_AXIOS=true DEBUG='testcontainers:containers' vitest run --config=vitest.config.wasm.ts",
    "test-proving": "MN_AXIOS=true DEBUG='testcontainers:containers' vitest run --dir='src/test/proving'",
    "test-no-proving": "MN_AXIOS=true DEBUG='testcontainers:containers' vitest run --dir='src/test/no-proving'",
    "test-security": "MN_AXIOS=true DEBUG='testcontainers:containers' vitest run --dir='src/test/security'",
    "test-docker": "docker compose -f proof-server.yml pull && yarn test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@midnight-ntwrk/ledger": "link:../result/lib/node_modules/@midnight-ntwrk/ledger-v6",
    "@midnight-ntwrk/zkir-v2": "link:../result/lib/node_modules/@midnight-ntwrk/zkir-v2"
  },
  "devDependencies": {
    "@d2t/vitest-ctrf-json-reporter": "^1.2.0",
    "@dao-xyz/borsh": "^5.2.3",
    "@eslint/compat": "^1.3.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "allure-commandline": "^2.34.1",
    "allure-vitest": "^3.3.3",
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "cache-ts": "^1.0.0",
    "cross-fetch": "^4.1.0",
    "eslint": "^9.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fetch-retry": "^6.0.0",
    "lodash": "^4.17.21",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "rxjs": "^7.8.2",
    "testcontainers": "^11.5.1",
    "typescript": "5.9.2",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4",
    "vitest-ctrf-json-reporter": "^0.0.2"
  },
  "files": [
    "dist/"
  ],
  "packageManager": "yarn@4.8.1"
}
